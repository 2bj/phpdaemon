#!/bin/bash

rm -rf output/*

phpdoc                                                 \
	-d ../                                         \
	-s on                                          \
	-i 'doc/*,applications/*'                      \
	-dn 'Core'                                     \
	-ue on                                         \
	-o HTML:Smarty:PHPDaemon                       \
	-t output/                                     \
	-ti 'PHPDaemon Source Code Documentation'
